{
	"compilerOptions": {
		// Output
		"declaration": true,
		"sourceMap": true,

		// Options
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"moduleResolution": "node",
		"module": "esnext",
		"paths": {
			"xxscreeps/*": [ "*" ],
		},
		"target": "esnext",
		"lib": [ "esnext", "dom" ],
		"resolveJsonModule": true,

		// Strictness
		"isolatedModules": true,
		"exactOptionalPropertyTypes": true,
		"noEmitOnError": false,
		"noImplicitOverride": true,
		// TODO: Re-enable this when nodejs types have been fixed
		"skipLibCheck": true,
		"strict": true,
	},
}
